<div class="container">
<h1>Create your new restaurant :</h1>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.input :name, class: "input"%>
<%= f.input :address, class: "input"%>
<%= f.input :category, collection: Restaurant::CATEGORIES , class: "input"%>
<%= f.input :phone_number, class: "input"%>
<%= f.submit "Validate", class: "btn" %>
<% end %>
</div>


